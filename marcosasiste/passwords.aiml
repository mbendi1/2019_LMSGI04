<?xml version="1.0" encoding="UTF-8"?>
<aiml>

<category>
    <pattern>contraseñas</pattern>
        <template>
             ¿De que contraseña necesitas asistencia?<br/>
              1) Contraseña de Hotmail. <br/>
              2) Contraseña de GMAIL. <br/>
              3) Contraseña de la Cuenta de Correo Corporativa. <br/>
              4) Contraseña de Inicio de Sesión <br/>
              Selecciona la opción (1, 2, 3 o 4).
        </template>
</category>

<category>
    <pattern>1</pattern>
    <that>* Selecciona la opción (1, 2, 3 o 4).</that>
    <template>
        <think>
            <set name="Opcion1">1</set>
        </think>
        <srai>ACMP</srai>
    </template>
</category>
  
<category>
    <pattern>ACMP</pattern>
    <template>
        <think>
            <condition name="opcion1">
                <li value="1">
                    <set name="passwd1">HOTMAIL</set>
                </li>
                <li value="2">
                    <set name="passwd2">GMAIL</set>
                </li>
                <li value="3">
                    <set name="passwd3">Cuenta de Correo Corporativa</set>
                </li>
                <li value="4">
                    <set name="passwd4">Contraseña de Inicio de Sesión</set>
                </li>
            </condition>
        </think>
        <srai><get name="passwd1"/></srai>
    </template>
</category>

